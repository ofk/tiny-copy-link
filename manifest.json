{
  "manifest_version": 2,
  "name": "Tiny Copy Link",
  "version": "1.0",
  "description": "Copy URL and title",
  "icons" : {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon38.png"
  },
  "background": {
    "scripts": [ "background.js" ]
  },
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "clipboardWrite"
  ]
}
